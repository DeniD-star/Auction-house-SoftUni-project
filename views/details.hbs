<!-- Details Page -->
<section id="catalog-section">

  <h1 class="item">
    {{auction.title}}
  </h1>
  <div class="item padded">

    <div class="layout right large">

      <div class="col">
        <img src="{{auction.imageUrl}}" class="img-large" />
      </div>

      <div class="content pad-med">

        <p>In category: <strong>{{auction.category}}</strong></p>
        <p>Excellent condition. Onboard diesel motor, upholstered cockpit,
          fishing sonar. Includes trailer.</p>

        <div class="align-center">
          <div>
            Current price: $<strong>{{auction.startingPrice}}</strong>
          </div>

          <!-- If current user can place a bid -->

          <!-- If current user is the bidder -->
          {{#if auction.highestBid}}
            <div>
              You are currently the
              <strong>highest bidder</strong>
              for this auction
            </div>
          {{else}}
            <form class="vertical" action="/auctions/bid/{{auction._id}}" method="POST">
              <label><span>Bid amount</span><input
                  type="number"
                  name="currentUserAmount" value="{{auction.currentUserAmount}}"
                /></label>
              <input class="action" type="submit" value="Place bid" />
            </form>
          {{/if}}
        </div>

      </div>
    </div>

    <footer>Listed by Peter Jackson</footer>
  </div>

</section>