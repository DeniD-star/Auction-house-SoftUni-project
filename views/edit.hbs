

            <!-- Edit Page -->
            <section id="create-section">

                <h1 class="item">Edit Auction</h1>

                <div class="item padded align-center">

                    <form class="layout left large" action="/auctions/edit/{{auction._id}}" method="POST" >

                        <div class="col aligned">
                            <label>
                                <span>Title</span>
                                <input type="text" name="title" value="{{auction.title}}"></label>
                            <label>
                                <span>Category</span>
                                <select name="category">
                                    <option value="estate" {{#if select-estate}}selected{{/if}}>Real Estate</option>
                                    <option value="vehicles" {{#if select-vehicles}}selected{{/if}}>Vehicles</option>
                                    <option value="furniture" {{#if select-furniture}}selected{{/if}}>Furniture</option>
                                    <option value="electronics"  {{#if select-electronics}}selected{{/if}}>Electronics</option>
                                    <option value="other" {{#if select-other}}selected{{/if}}>Other</option>
                                </select>
                            </label>
                            <label>
                                <span>Image URL</span>
                                <input type="text" name="imageUrl" value="{{auction.imageUrl}}">
                            </label>
                            <label>
                                <span>Starting price</span>

                                <!-- If the current auction has a bidder, this input field should be disabled -->
                                <input type="number" name="startingPrice" value="{{auction.startingPrice}}">
                            </label>
                        </div>

                        <div class="content pad-med align-center vertical">
                            <label>
                                <span>Description</span>
                                <textarea name="description">{{auction.description}}</textarea>
                            </label>

                            <div class="align-center">
                                <input class="action" type="submit" value="Update Listing">
                            </div>
                        </div>

                    </form>

                </div>

            </section>
